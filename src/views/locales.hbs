<div class="col-md-10 offset-md-1">
    <div class="card">
        <div class="card-header">
            <div class="row d-flex justify-content-between aling-items-center">
                <h1>Locales de venta</h1>
                <button type="button" class="btn btn-info mb-2" onclick="window.location.href='/'">Regresar</button>
            </div>
        </div>
        <div class="card-body">
            <h5>Registrar nuevo Local</h5>
            <form action="/add-local" method="post">

                <div class="form-group">
                    <label for="nombreLocal" class="form-label mt-2">Nombre del Local</label>
                    <input type="text" name="nombreLocal" id="nombreLocal" class="form-control" required />
                </div>

                <div class="form-group">
                    <label for="selectProducto" class="form-label mt-2">Tipo de Producto</label>
                    <select class="form-control" name="selectProducto" id="selectProducto" required>
                        <option>Comida</option>
                        <option>Dulces y Postres</option>
                        <option>Ropa y Calzado</option>
                        <option>Bebida</option>
                        <option>Maquillajes y Perfumes</option>
                        <option>Juguetes</option>
                        <option>Souvenirs</option>
                        <option>Varios</option>
                    </select>
                </div>

                <label class="form-label mt-2">Dias de operaci√≥n</label>
                <div class="form-check">
                    <label class="form-check-label" for="viernesCH">
                        <input type="checkbox" class="form-control" name="viernesCH" id="viernesCH" value="checkedValue"
                            checked />
                        Viernes
                    </label>
                    <label class="form-check-label">
                        <input type="checkbox" class="form-control" name="sabadoCH" id="sabadoCH" value="checkedValue"
                            checked />
                        Sabado
                    </label>
                    <label class="form-check-label" for="domingoCH">
                        <input type="checkbox" class="form-control" name="domingoCH" id="domingoCH" value="checkedValue"
                            checked />

                        Domingo
                    </label>
                </div>
                <button type="submit" class="btn btn-success btn-block mt-3">Agregar Local</button>
            </form>
        </div>


        <div class="card-footer">
            <h5>Locales registrados</h5>
            {{#if locales}}
            <ul>
                {{#each locales}}
                <li class="list-group-item d-flex justify-content-between aling-items-center">
                    {{nombre}} /
                    {{productos}} /
                    Viernes: {{viernes}} /
                    Sabado: {{sabado}} /
                    Domingo: {{domingo}}
                    <a href="/borrarLocal/{{@key}}" class="btn btn-danger">
                        Borrar
                    </a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No hay locales registrados.</p>
            {{/if}}
        </div>

    </div>
</div>